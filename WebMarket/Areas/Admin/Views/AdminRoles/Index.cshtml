@model IEnumerable<WebMarket.Models.Role>

@{
    ViewData["Title"] = "Quản Lý Quyền Truy Cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p>
    <a class="btn btn-success m-r-5" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach(var item in Model)
                {
                    <tr>
                <th scope="row">@item.RoleId</th>
                <td>@item.RoleName</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId"> View</a>
                     <a class="btn btn-warning btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId"> Edit</a>
                      <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId"> Delete</a>
            </tr>
                }
            }
          
        </tbody>
    </table>
</div>

